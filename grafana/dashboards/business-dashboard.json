{
  "id": null,
  "title": "Painel de Monitoramento de Serviço",
  "tags": ["prometheus", "monitoramento", "negócio", "devops"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "stat",
      "title": "Total de Pedidos Processados",
      "targets": [
        {
          "expr": "orders_total",
          "legendFormat": "Pedidos Totais"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none"
      }
    },
    {
      "type": "stat",
      "title": "Ticket Médio (R$)",
      "targets": [
        {
          "expr": "avg_order_value",
          "legendFormat": "Ticket Médio"
        }
      ],
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none"
      }
    },
    {
      "type": "graph",
      "title": "Pedidos por Minuto",
      "targets": [
        {
          "expr": "rate(orders_total[1m])",
          "legendFormat": "Pedidos/minuto"
        }
      ],
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 },
      "lines": true,
      "fill": 2,
      "linewidth": 2,
      "points": true,
      "legend": { "show": true }
    },
    {
      "type": "graph",
      "title": "Tempo de Processamento dos Pedidos (Percentil 95)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(order_processing_time_seconds_bucket[5m])) by (le))",
          "legendFormat": "P95"
        }
      ],
      "gridPos": { "x": 0, "y": 10, "w": 12, "h": 6 },
      "lines": true,
      "fill": 2,
      "linewidth": 2,
      "points": true,
      "legend": { "show": true },
      "yaxes": [
        { "format": "s", "label": "Segundos", "logBase": 1 },
        { "format": "short", "logBase": 1 }
      ]
    },
    {
      "type": "graph",
      "title": "Usuários Ativos na Aplicação",
      "targets": [
        {
          "expr": "app_active_users",
          "legendFormat": "Usuários Ativos"
        }
      ],
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 6 },
      "lines": true,
      "fill": 2,
      "linewidth": 2,
      "points": true,
      "legend": { "show": true },
      "yaxes": [
        { "format": "short", "label": "Usuários", "logBase": 1 },
        { "format": "short", "logBase": 1 }
      ]
    }
  ]
}
